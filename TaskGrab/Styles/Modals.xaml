<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    x:Class="TaskGrab.Styles.Modals" 
                    xmlns:local="clr-namespace:TaskGrab">
    <ControlTemplate x:Key="ModalWindow" TargetType="Page">
        <Grid>
            <Grid>
                <ContentPresenter />
            </Grid>
            <Canvas>
                <Button 
                        Click="BackBtnClick"
                        Visibility="{Binding Path=IsBackButtonVisible}"
                        Margin="10"
                        Style="{StaticResource HeaderButton}">
                    <TextBlock FontFamily="{StaticResource FontAwesome}" Text="&#xf104;" Foreground="#FFFFFF" FontSize="18"/>
                </Button>
            </Canvas>
        </Grid>
    </ControlTemplate>
</ResourceDictionary>