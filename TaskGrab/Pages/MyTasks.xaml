<Page x:Class="TaskGrab.Pages.MyTasks"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TaskGrab.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="480"
      Title="My Tasks">

    <ScrollViewer FontFamily="Arial Black" FontSize="16">
        <Grid Name ="MyTaskGrid" Background="#FF050C53">
            <TextBlock Foreground="#FFFDFDFD" Margin="0,0,0,702" Background="#FF5D00FF" FontSize="36" FontFamily="Arial Black" TextAlignment="Center">My Tasks</TextBlock>
            <Button x:Name="postedButton" Content="Posted" HorizontalAlignment="Left" Height="55" Margin="0,61,0,0" VerticalAlignment="Top" Width="232" Background="#FF9191F3" Foreground="#FF050C53" FontSize="22" FontWeight="Normal" Click="postedButton_Click"/>
            <Label x:Name="postedLabelSymbol" Content="&#xf067;" FontFamily="{StaticResource FontAwesome}" HorizontalAlignment="Left" Height="30" Margin="50,72,0,0" VerticalAlignment="Top" Width="28" RenderTransformOrigin="-0.309,-2.658" Foreground="#FFE8FF00" FontSize="22"/>


            <Button x:Name="savedButton" Content="Saved" HorizontalAlignment="Left" Height="55" Margin="232,61,0,0" VerticalAlignment="Top" Width="230" Background="#FF9191F3" Foreground="#FF050C53" FontSize="22" Click="savedButton_Click"/>
            <Label x:Name="savedLabelSymbol" Content="&#xf02e;" FontFamily="{StaticResource FontAwesome}" HorizontalAlignment="Left" Height="30" Margin="288,72,0,0" VerticalAlignment="Top" Width="27" RenderTransformOrigin="1.123,0.693" Foreground="#FFE8FF00" FontSize="22"/>

            <Button x:Name="signOutButton" Content="&#xf08b;" FontFamily="{StaticResource FontAwesome}" HorizontalAlignment="Left" Height="55" Margin="10,0,0,0" VerticalAlignment="Top" Width="50" RenderTransformOrigin="-1.013,-4.429" Background="#FF5D00FF" Foreground="#FFE8FF00" FontSize="36" Click="signOutButton_Click"/>
            <Button x:Name="profileButton" Content="&#xf007;" FontFamily="{StaticResource FontAwesome}" HorizontalAlignment="Left" Height="55" Margin="60,0,0,0" VerticalAlignment="Top" Width="56" RenderTransformOrigin="-1.013,-4.429" Background="#FF5D00FF" Foreground="#FFE8FF00" FontSize="36"/>

        </Grid>
    </ScrollViewer>
</Page>
