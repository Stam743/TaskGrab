<Page x:Class="TaskGrab.Pages.MainView.Index"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TaskGrab.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="480"
      Title="MainView"
      Template="{StaticResource ModalWindow}">
    <Canvas x:Name="MainGrid">
        <Grid>
            <Frame  x:Name="MainViewFrame"
                NavigationUIVisibility="Hidden"
                        Source="MapView.xaml"/>
        </Grid>
        <Button Canvas.Bottom="0" Canvas.Left="200" Style="{StaticResource SwitchButton}"
                    Click="SwitchClicked"/> 
    </Canvas>
</Page>
